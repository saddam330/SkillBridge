<footer class="footer py-4">
  <div class="container ">
    <div class="row align-items-start gy-4">
      <!-- Brand/Tagline Column -->
      <div class="col-12 col-sm-6 col-md-4 mb-3 mb-md-0">
        <h5 class="mb-2 fs-6">SkillBridge</h5>
        <p class="mb-0 small">Connecting talented individuals with their dream careers. Find your perfect job match today.</p>
      </div>

      <!-- For Job Seekers Column -->
      <div class="col-6 col-sm-6 col-md-2 offset-md-1 mb-3 mb-md-0">
        <h6 class="mb-2 small fw-bold">For Candidates</h6>
        <ul class="list-unstyled small mb-0">
          <li class="mb-1"><%= link_to "Browse Projects", projects_path, class: "text-decoration-none" %></li>
          <li><%= link_to "Saved Projects", "#", class: "text-decoration-none" %></li>
        </ul>
      </div>

      <!-- For Employers Column -->
      <div class="col-6 col-sm-6 col-md-2 mb-3 mb-md-0">
        <h6 class="mb-2 small fw-bold">For Employers</h6>
        <ul class="list-unstyled small mb-0">
          <li class="mb-1"><%= link_to "Post a Project", new_project_path, class: "text-decoration-none" %></li>
          <li><%= link_to "Search Talent", "#", class: "text-decoration-none" %></li>
        </ul>
      </div>

      <!-- Company Column -->
      <div class="col-6 col-sm-6 col-md-2 mb-3 mb-md-0">
        <h6 class="mb-2 small fw-bold">Company</h6>
        <ul class="list-unstyled small mb-0">
          <li class="mb-1"><%= link_to "About Us", "#", class: "text-decoration-none" %></li>
          <li><%= link_to "Contact Us", "#", class: "text-decoration-none" %></li>
        </ul>
      </div>
    </div>

    <!-- Copyright and Terms -->
    <div class="row mt-3 pt-2 border-top">
      <div class="col-12 col-md-6 text-center text-md-start mb-2 mb-md-0">
        <p class="small mb-0">&copy; <%= Date.today.year %> SkillBridge. All rights reserved.</p>
      </div>
      <div class="col-12 col-md-6 text-center text-md-end">
        <span class="small me-3"><%= link_to "Privacy Policy", "#", class: "text-decoration-none" %></span>
        <span class="small"><%= link_to "Terms of Service", "#", class: "text-decoration-none" %></span>
      </div>
    </div>
  </div>
</footer>
