<h2>Applicantons on <%= @project.project_title %></h2>
<div class="applicant-card container w-75">
  <% @applicants.each do |applicant| %>
  <div class="user-img">
      <p><%= cl_image_tag("applicant.user.photo", class: "avatar") %></p>
  </div>
  <div class="user-details">
    <div class="user-info">
      <p><%= applicant.user.first_name %> <%= applicant.user.last_name %></p>
      <p><%= applicant.user.email %></p>
    </div>
    <div class="skills-info">
      <% (applicant.user.skills || '').split(',').each do |skill| %>
        <span class="pill skills"><%= skill.strip %></span>
      <% end %>
    </div>
  </div>
   <div class="buttons">
     <div class="cv-btn">
      <% if applicant.user.cv.attached? %>
        <span><%= link_to "Download CV", rails_blob_path(applicant.user.cv, disposition: "attachment"), class: "btn btn-primary",target: "_blank", download: true%></span>
      <% else %>
        <span>No CV attached</span>
      <% end %>
     </div>
    <div class="cover-letter-btn">
      <% if applicant.cover_letter.attached? %>
        <span><%= link_to "Download Cover Letter", rails_blob_path(applicant.cover_letter, disposition: "attachment"), class: "btn btn-primary", target: "_blank", download: true%></span>
      <% else %>
        <span>No Cover Letter Attached</span>
      <% end %>
  <% end %>
    </div>
   </div>

</div>
