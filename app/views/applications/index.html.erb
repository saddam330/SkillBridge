<div class="container w-75">

  <h1 class="mb-3"><strong>My Applications</strong></h1>

  <div class="bg-dark rounded-4 shadow-sm p-1 mb-4">
      <table class="table mb-0">
      <thead class="thead-light">
      <tr>
        <th><strong>Project</strong></th>
        <th><strong>Status</strong></th>
        <th><strong>Submitted At</strong></th>
        <th><strong>Details</strong></th>
      </tr>
    </thead>


    <tbody>
      <% @applications.each do |application| %>
        <tr>
          <td><%= application.project.project_title %></td>

          <td>
            <% status_class = case application.status.downcase
              when "accepted" then "badge bg-success px-2 rounded-3 mt-auto"
              when "rejected" then "badge bg-danger px-2 rounded-3 mt-auto"
              when "pending" then "badge bg-warning px-2 rounded-3 mt-auto"
              else "badge bg-secondary"
            end %>
            <span class="<%= status_class %>"><%= application.status %></span>
          </td>




          <td><%= application.created_at.strftime("%B %d, %Y") %></td>

          <td>
            <%= link_to 'View', application_path(application), class: "btn btn-sm btn-primary px-2 rounded-3 mt-auto" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
