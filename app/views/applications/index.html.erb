<h1 class="mb-4">My Applications</h1>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>Project</th>
      <th>Status</th>
      <th>Submitted At</th>
      <th>Details</th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.project.project_title %></td>

        <td>
          <% status_class = case application.status
            when "accepted" then "badge bg-success"
            when "rejected" then "badge bg-danger"
            else "badge bg-warning"
          end %>
          <span class="<%= status_class %>"><%= application.status.capitalize %></span>
        </td>

        <td><%= application.created_at.strftime("%B %d, %Y") %></td>

        <td>
          <%= link_to 'View', application_path(application), class: "btn btn-sm btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
